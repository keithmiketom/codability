<h1>Start Quiz</h1>

<%= form_tag({:controller => "aptitude",
				  :action => "start"}) do %>
  <p><%= label_tag(:number, "How many questions do you want in the test?", :id => "question") %></p>
  <p class="center"><%= select_tag(:number, options_for_select((10..20).map {|x| [x, x]}), :id => "count") %> <br /></p>
  
  <div class="center">
	 <%= submit_tag "Start!", :class => "submit"%>
  </div>
<% end %>

<% content_for(:title) do %>
  Start Quiz
<% end %>